  <script>
    window.addEventListener('load', function() {
      setTimeout(function() {
        // Hide the loading screen and show the website content
        document.querySelector('.loading-screen').classList.add('loaded');
      }, 2000); // Delay in milliseconds (2 seconds)
    });
  </script>
